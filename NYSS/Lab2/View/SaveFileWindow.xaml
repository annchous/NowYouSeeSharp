<Window x:Class="Lab2.View.SaveFileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2"
        mc:Ignorable="d"
        Title="Сохранить файл" Height="450" Width="800"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Сохранить в: " HorizontalAlignment="Left" Margin="125,170,0,0" VerticalAlignment="Top" Width="100"/>
        <TextBox Name="filePath" HorizontalAlignment="Left" Height="23" Margin="230,172,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="454"/>
        <Button x:Name="SaveButton" Content="Сохранить" HorizontalAlignment="Left" Margin="360,231,0,0" VerticalAlignment="Top" Width="80" Height="25" Background="#FFBEE0E4" BorderBrush="#FF76B7BF" Click="SaveButton_OnClick" />
    </Grid>
</Window>
