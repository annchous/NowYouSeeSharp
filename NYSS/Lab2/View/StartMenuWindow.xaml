<Window x:Class="Lab2.View.StartMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2"
        mc:Ignorable="d"
        Title="Стартовое окно" Height="450" Width="800"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Button x:Name="DownloadFileButton" Content="Загрузить" Margin="500,10,200,10" Height="30" Background="#FFBEE0E4" BorderBrush="#FF76B7BF" Click="DownloadFileButton_Click"/>
        <Button x:Name="OpenFileButton" Content="Открыть" Margin="200,10,500,10" Height="30" Background="#FFBEE0E4" BorderBrush="#FF76B7BF" Click="OpenFileButton_Click"/>
        <TextBox IsReadOnly="True" HorizontalAlignment="Left" Height="29" Margin="74,131,0,0" TextWrapping="Wrap" Text="Отркыть существующий файл с данными или загрузить новый из Интернета?" VerticalAlignment="Top" Width="658" FontFamily="Cambria" FontSize="18" BorderBrush="{x:Null}"/>
    </Grid>
</Window>
